{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["src/**/*", "test/**/*", "examples/**/*.{js,ts,tsx,jsx}", "*.{js,ts,json,md}"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "recommended": true,
        "noExcessiveCognitiveComplexity": "warn",
        "noBannedTypes": "off"
      },
      "correctness": {
        "recommended": true,
        "noUnusedVariables": "warn"
      },
      "style": {
        "recommended": true,
        "useConst": "error",
        "useTemplate": "warn"
      },
      "suspicious": {
        "recommended": true,
        "noDebugger": "error",
        "noExplicitAny": "off",
        "noAsyncPromiseExecutor": "error"
      },
      "performance": {
        "recommended": true
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["test/**/*", "**/*.test.{js,ts}", "**/*.spec.{js,ts}"],
      "linter": {
        "rules": {
          "style": {
            "useTemplate": "off"
          },
          "suspicious": {
            "noExplicitAny": "off",
            "useIterableCallbackReturn": "off",
            "noImplicitAnyLet": "off"
          },
          "complexity": {
            "noBannedTypes": "off",
            "noExcessiveCognitiveComplexity": "off"
          }
        }
      }
    },
    {
      "includes": ["examples/**/*"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
